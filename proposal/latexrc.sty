	\node (01) at (-3,0) {$0$};
	\node (A) at (-2,0) {$#1$};
	\node (B) at (0,0) {$#3$};
	\node (C) at (2,0) {$#5$};
	\node (02) at (3,0) {$0$};

	\draw[->] (01) -- (A);
	\draw[->] (A) to node [auto] {$#2$} (B);
	\draw[->] (B) to node [auto] {$#4$} (C);
	\draw[->] (C) -- (02);
	\end{tikzpicture}
	} %short exact sequence of \SES{A}{f}{B}{g}{C} with f:A to B and g: B to C

